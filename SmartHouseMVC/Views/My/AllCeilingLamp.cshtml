@using SmartHouseMVC.Models.DBClas


@{  Layout = null;
}
<div class="figure-div">
    @foreach (CeilingLampdb item in ViewBag.Ceilings)
    {
        <div class="figure">
           <h3> @item.Name</h3><br />
            @if (item.Status == true)
            {
            <p>Устройстро включено</p>
            @Html.RouteLink("Выключить", new { controller = "My", action = "OnOffCeiling", id = item.Id }, new { id = item.Id, @class = "btn btn-small btn-primary " })
            <p>Статус устройства</p>
            @item.Status<br />
            <p>Освещённость</p>
            @item.BrightLight<br />
            @Html.RouteLink("Увеличить", new { controller = "My", action = "IncreaseBrightLight", id = item.Id }, new { id = item.Id, @class = "btn btn-small btn-primary " })
            @Html.RouteLink("Уменьшить", new { controller = "My", action = "DecreasBrightLight", id = item.Id }, new { id = item.Id, @class = "btn btn-small btn-primary " })<br />
            @Html.RouteLink("Удалить", new { controller = "My", action = "DeleteCeling", id = item.Id }, new { id = item.Id, @class = "btn btn-small btn-primary " })<br />
            }
            else
            {
            <p>Устройстро выключено</p>
            @Html.RouteLink("Включить", new { controller = "My", action = "OnOffCeiling", id = item.Id }, new { id = item.Id, @class = "btn btn-small btn-primary " })
            }

        </div>
    }
</div>