

@using SmartHouseMVC.Models.clas
@model IDictionary<int, Technics>

@{
    Layout = null;
}
<div class="figure-div">
    <h2>AirConditioner</h2>

        @foreach (var item in Model)
        {
            
           if (item.Value is AirConditioner)
           {
            <div class="figure">
                @if (item.Value.status == true)
                {

                    <h2>@item.Value.Name</h2><br />
                    @Html.RouteLink("Включить", new { controller = "My", action = "Off", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })
                    <span>Температура:</span>
                    @Html.Label(((Temperature)item.Value).Temprich.ToString())<br />
                    @Html.RouteLink("Увеличить", new { controller = "My", action = "IncreaseTempriche", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })
                    @Html.RouteLink("Уменьшить", new { controller = "My", action = "DecreasTempriche", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })<br />
                    <span>Направление ветра:</span>
                    @Html.Label(((AirConditioner)item.Value).DirectionWind.ToString())<br />
                    @Html.RouteLink("Слудуещее направление", new { controller = "My", action = "NextDirectionWind", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })
                    @Html.RouteLink("Предыдущее направление", new { controller = "My", action = "PreviousDirectionWind", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })<br />
                    <span>Скорость ветра:</span>
                    @Html.Label(((AirConditioner)item.Value).SpeedWind.ToString())<br />
                    @Html.RouteLink("Увеличить", new { controller = "My", action = "IncreaseSpeedWind", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })
                    @Html.RouteLink("Уменьшить", new { controller = "My", action = "DecreasSpeedWind", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })<br />
                }
                else
                {
                    <h2>@item.Value.Name</h2><br />
                    @Html.RouteLink("Выключить", new { controller = "My", action = "On", id = item.Key }, new { id = item.Key, @class = "btn btn-default" })
                }
            </div>
           }


        }

</div>